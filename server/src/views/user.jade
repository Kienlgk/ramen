extends layout
block content
  .row
    .col-xs-12
      .box
        .box-header
          h3.box-title Danh sách đơn hàng
          span.pull-right
            a( href="#" data-toggle="modal" data-target="#user-create-modal") Tạo user
        // /.box-header
        .box-body
          table#user-menu.table.table-bordered.table-striped
            thead
              tr
                th STT
                th username
                th isAdmin
                th Thao tác
            tbody
              - index = 1
              each user in users
                tr
                  td=index++
                  td=(user.username)
                  td=user.isAdmin
                  td
                    if !user.isAdmin
                      a(data-toggle="tooltip" title="Remove" data-id=user.id).user-delete
                        i.fa.fa-trash(data-id=user.id)
  .modal#user-create-modal
    .modal-dialog
      .modal-content
        form#user-create-form
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') ×
            h3.modal-title Thêm món ăn
          .modal-body
            .row
              .col-sm-6
                .form-group
                  label username
                  input.form-control(type="text", name="username")
              .col-sm-6
                .form-group
                  label Password
                  input.form-control(type="password", name="password")

          .modal-footer
            button.btn.btn-default.pull-left(type='button', data-dismiss='modal') Close
            button.btn.btn-success(type="submit") Tạo user

  script(src="/js/user.js")
